gateway ::
server.port=9012
spring.application.name=apigateway
spring.cloud.gateway.mvc.discovery.locator.enabled=true
spring.cloud.gateway.mvc.discovery.locator.lower-case-service-id=true
eureka.client.registerWithEureka=true
eureka.client.fetchRegistry=true
eureka.client.should-unregister-on-shutdown=true
eureka.client.registry-fetch-interval-seconds=2
eureka.client.initial-instance-info-replication-interval-seconds=2
eureka.client.instance-info-replication-interval-seconds=2
eureka.client.refresh.enable=true
eureka.client.instance.preferIPAddress=true
eureka.instance.lease-renewal-interval-in-seconds=2
eureka.instance.lease-expiration-duration-in-seconds=2
eureka.server.peer-node-read-timeout-ms=7000
eureka.server.waitTimeInMsWhenSyncEmpty=0
eureka.server.response-cache-auto-expiration-in-seconds=3

ribbon.serverListRefreshInterval=1000
ribbon.ConnectTimeout=86400000
ribbon.ReadTimeout=86400000
hystrix.command.default.execution.isolation.thread.timeoutInMilliseconds=345600000

#zuul.ignored-services=*
#zuul.retryable=true

management.endpoints.gateway.enabled=true
management.endpoints.web.exposure.include=gateway,health

spring.cloud.gateway.mvc.http-client.type=autodetect

spring.cloud.gateway.mvc.routes[0].id=auth
spring.cloud.gateway.mvc.routes[0].uri=http://localhost:9012
spring.cloud.gateway.mvc.routes[0].predicates[0]=Path=/sso/**
spring.cloud.gateway.mvc.routes[0].filters[0]=RewritePath=/sso/(?<segment>.*),/auth/sso/${segment}

spring.cloud.gateway.mvc.routes[1].id=lib
spring.cloud.gateway.mvc.routes[1].uri=http://localhost:9012

